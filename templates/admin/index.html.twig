{% extends 'base.html.twig' %}

{% block title %}{% trans %}Adminpanel{% endtrans %}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>username</th>
                        <th>email</th>
                        <th>roles</th>
                        <th>created_at</th>
                        <th>changed_at</th>
                        <th></th>
                    </tr>
                </thead>
                  <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{user.id}}</th>
                        <td>{{user.username}}</td>
                        <td>{{user.email}}</td>
                        <td>{{user.roles|join(',')}}</td>
                        <td>{{user.createdAt|date('Y-m-d G:i:s')}}</td>
                        <td>{{user.changedAt|date('Y-m-d G:i:s')}}</td>
                        <td></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        
    </div>
</div>
{% endblock %}
